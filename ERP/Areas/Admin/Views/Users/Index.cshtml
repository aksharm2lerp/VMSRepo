@using GridCore
@addTagHelper *, GridMvc

@model ISGrid

@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    ViewBag.Title = "Home Page";
}


<div class="container margin-top-2">
    <div class="card-body">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card border-1 shadow rounded-7 mt-5 p-1">



                <div class="row border-bottom">

                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="page-breadcrumb align-items-center">
                            <div class="p-2">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb mb-0 p-0">
                                        <li class="breadcrumb-item">
                                            <a asp-controller="Home" asp-action="Index" asp-area="Admin"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item active" aria-current="page">Users</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6 text-end">
                          <div class="p-1">                                
                             @*<button class="btn btn-outline-primary btn-sm" type="button"> <a asp-controller="Company" asp-action="Register" asp-area="SuperAdmin"> Add New </a></button>*@
                             <input class="btn btn-outline-primary btn-sm" type="button" value="Add New" onclick="location.href='@Url.Action("Create", "Users")'" />
                         </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <grid model="@Model" />
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/js/gridmvc.js" type="text/javascript"></script>
