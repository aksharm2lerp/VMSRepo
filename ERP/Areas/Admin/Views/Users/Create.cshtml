@model UserMasterMetadata
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml"; 
}


<div class="container pt-5">
    <div class="card-body">
        <div class="card col-sm-12 col-md-12 col-lg-12 col-xl-12">

            <div class="page-breadcrumb  align-items-center border-bottom">
                <div class="p-2">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index" asp-area="Admin"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a asp-controller="Users" asp-action="Index" asp-area="Admin">Users</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Add User</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row">
                <form method="post" asp-action="Create" asp-controller="Users" asp-area="Admin" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
                    <div class="row">
                        <div class="">
                                                     
                             
                             <div class="row mb-3">
                                <label asp-for="RoleID" class="col-sm-3 col-form-label text-end">Role</label>
                                <div class="col-sm-9">
                                    <select asp-for="RoleID" asp-items="ViewBag.RoleName" class="form-control">
                                        <option value="">Select User Role...</option>
                                    </select>
                                    <span asp-validation-for="RoleID" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="" class="col-sm-3 col-form-label text-end">Email</label>
                                <div class="col-sm-9">
                                    <input type="text" required="" class="form-control" id="Email" name="Email" asp-for="Email" placeholder="">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-3 col-form-label text-end">First Name</label>
                                <div class="col-sm-9">
                                    <input type="text" required="" class="form-control" id="Forename" name="Forename" asp-for="Forename" placeholder="">
                                    <span asp-validation-for="Forename" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-3 col-form-label text-end">Last Name</label>
                                <div class="col-sm-9">
                                    <input type="text" required="" class="form-control" id="Surname" name="Surname" asp-for="Surname" placeholder="">
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-3 col-form-label text-end">Contact Number</label>
                                <div class="col-sm-9">
                                    <input type="text" required="" class="form-control" id="Mobile" name="Mobile" asp-for="Mobile" placeholder="">
                                    <span asp-validation-for="Mobile" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-3 col-form-label text-end">Password</label>
                                <div class="col-sm-9">
                                    <input type="password" required="" class="form-control" id="Password" name="Password" asp-for="Password" placeholder="">
                                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-3 col-form-label text-end">Confirm Password</label>
                                <div class="col-sm-9">
                                    <input type="password" required="" class="form-control" asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="" class="col-sm-3 col-form-label text-end">Is Active</label>
                                <div class="col-sm-9">
                                    <input asp-for="IsActive" class="form-check-input" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <button type="submit" class="btn btn-primary btn-info px-5">Submit</button>
                                </div>
                            </div>
                        </div>

                    </div>

                </form>

            </div>
        </div>
     </div>
</div>
