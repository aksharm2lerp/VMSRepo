@model RoleMasterMetadata
@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="container margin-top-2">
    <div class="card-body">
        <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
            <div class="card border-1 shadow rounded-7 mt-5 p-1">
                <div class="row border-bottom">

                    <div class="page-breadcrumb align-items-center">
                        <div class="p-2">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mb-0 p-0">
                                    <li class="breadcrumb-item">
                                        <a asp-controller="Role" asp-action="Index" asp-area="SuperAdmin"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item active" aria-current="page"><a asp-controller="Role" asp-action="Index" asp-area="SuperAdmin">Roles</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Add Role</li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <form method="post" asp-action="Create" asp-controller="Role" asp-area="SuperAdmin" class="row g-3 needs-validation" novalidate>
                        <div class="row mx-5">

                             
                               
                                <div class="row ">
                                    <label for="roleName" class="col-sm-3 col-form-label text-right">Role Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" required="" class="form-control" id="Name" name="Name" asp-for="Name" placeholder="" >
                                        <div id="NameFeedback" class="invalid-feedback">Please enter role name.</div>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row my-2">
                                    <label class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-9">
                                        <button type="submit" class="btn btn-primary btn-info px-5">Save</button>
                                    </div>
                                </div>
                            </div>

                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>