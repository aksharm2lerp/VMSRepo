@model Business.Entities.Designation.DesignationMaster
@{
    ViewData["Title"] = "Designation Create...!";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="container pt-5">
    <div class="card-body">
        <div class="card col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="page-breadcrumb align-items-center border-bottom">
                <div class="p-2">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a asp-controller="Designation" asp-action="Index" asp-area="SuperAdmin"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page"><a asp-controller="Designation" asp-action="Index" asp-area="SuperAdmin">Designation</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row">
                <form method="post" asp-action="DesignationRegister" asp-controller="Designation" asp-area="SuperAdmin" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">

                    <div class="row mb-3">
                        <input type="hidden" asp-for="DesignationID" />
                        <label for="" class="col-sm-3 col-form-label text-end">Designation Name</label>
                        <div class="col-sm-9">
                            <input type="text" required="" class="form-control" id="DesignationText" name="DesignationText" asp-for="DesignationText" placeholder="">
                            <span asp-validation-for="DesignationText" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label for="" class="col-sm-3 col-form-label text-end">Designation Description</label>
                        <div class="col-sm-9">
                            <textarea required="" class="form-control" rows="4" id="Description" name="Description" asp-for="Description" placeholder=""></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="" class="col-sm-3 col-form-label text-end">Designation Group</label>
                        <div class="col-sm-9">
                            <div class="row">
                                <div class="col-5">
                                    <select asp-for="DesignationGroupID" asp-items="ViewBag.DesignationGroupText" class="form-control">
                                        <option value="">Select Designation Group...</option>
                                    </select>
                                </div>
                                <div class="col-7">
                                    <a asp-controller="Designation" asp-action="AddDesignationGroup" asp-area="SuperAdmin"><i class="bx bx-plus-medical">Add</i></a>
                                </div>
                            </div>
                            <span asp-validation-for="DesignationGroupID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="" class="col-sm-3 col-form-label text-end">Designation Level</label>
                        <div class="col-9">
                            <div class="row">
                                <div class="col-5">
                                    <select asp-for="DesignationLevel" class="form-control">
                                        <option value="">Select Designation Level...</option>
                                        <option value="level1">Level 1</option>
                                        <option value="level2">Level 2</option>
                                        <option value="level3">Level 3</option>
                                        <option value="level4">Level 4</option>
                                    </select>

                                    <span asp-validation-for="DesignationLevel" class="text-danger"></span>
                                </div>
                                <div class="col-7"></div>
                            </div>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label for="" class="col-sm-3 col-form-label text-end">Is Active</label>
                        <div class="col-sm-9">
                            @Html.CheckBoxFor(s => s.IsActive)
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-primary btn-info px-5">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>