@model Business.Entities.Designation.DesignationGroup

@{
    ViewData["Title"] = "Designation Group Create...!";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="container pt-5">
    <div class="card-body">
        <div class="card col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="page-breadcrumb align-items-center border-bottom">
                <div class="p-2">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a asp-controller="Designation" asp-action="Index" asp-area="SuperAdmin"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page"><a asp-controller="Designation" asp-action="Index" asp-area="SuperAdmin">Designation</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Designation Group</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row">
                <form method="post" asp-action="AddDesignationGroup" asp-controller="Designation" asp-area="SuperAdmin" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
                    <div class="row">

                        <div class="row mb-3">
                            <input type="hidden" asp-for="DesignationGroupID" />
                            <label for="" class="col-sm-3 col-form-label text-end">Designation Group Name</label>
                            <div class="col-sm-9">
                                <input type="text" required="" class="form-control" id="DesignationGroupText" name="DesignationGroupText" asp-for="DesignationGroupText" placeholder="">
                                <span asp-validation-for="DesignationGroupText" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="" class="col-sm-3 col-form-label text-end">Designation Group Remark</label>
                            <div class="col-sm-9">
                                <textarea required="" class="form-control" rows="4" id="Remark" name="Remark" asp-for="Remark" placeholder=""></textarea>
                                <span asp-validation-for="Remark" class="text-danger"></span>
                            </div>
                        </div>
                                                  
                        <div class="row mb-3">
                            <label for="" class="col-sm-3 col-form-label text-end">Is Active</label>
                            <div class="col-sm-9">
                                @Html.CheckBoxFor(s => s.IsActive)
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-primary btn-info px-5">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>