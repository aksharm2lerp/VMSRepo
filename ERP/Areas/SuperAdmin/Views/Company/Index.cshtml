@using Microsoft.AspNetCore.Identity
@using Business.SQL
@using GridCore
@addTagHelper *, GridMvc
@model ISGrid
@{
    Layout = "~/Areas/SuperAdmin/Views/Shared/_LayoutMaster.cshtml";
    ViewBag.Title = "Company entry form...";
}
<style>
    .hidden {
        display: none
    }

    .disable {
        cursor: not-allowed !important;
        opacity: 0.6 !important;
        pointer-events: none !important;
    }
</style>

<div class="container margin-top-2">
    <div class="card-body">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card border-1 shadow rounded-7 mt-5 p-1">

                <div class="row border-bottom">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="page-breadcrumb align-items-center">
                            <div class="p-2">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb mb-0 p-0">
                                        <li class="breadcrumb-item">
                                            <a asp-controller="Company" asp-action="Index" asp-area="SuperAdmin"><i class="bx bx-home-alt"></i></a>
                                        </li>
                                        <li class="breadcrumb-item active" aria-current="page">Companies</li>
                                    </ol>
                                </nav>

                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6 col-lg-6 text-end">
                        <div class="p-1">

                            @*<button class="btn btn-outline-primary btn-sm" type="button"> <a asp-controller="Company" asp-action="Register" asp-area="SuperAdmin"> Add New </a></button>*@
                            <input class="btn btn-outline-primary btn-sm" type="button" value="Add New" onclick="location.href='@Url.Action("Register", "Company")'" />
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-12">
                        <grid model="@Model" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/js/gridmvc.js" type="text/javascript"></script>
